<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">
        <attr name="is_loading" format="boolean" />
        <attr name="title" format="string" />
        <attr name="button_background" format="color" />
        <attr name="button_text_color" format="color" />
        <attr name="button_border_color" format="color" />
        <attr name="border_width" format="dimension" />
        <attr name="is_image" format="boolean" />
        <attr name="button_image" format="integer"/>
        <attr name="button_text_style" format="reference"/>
    </declare-styleable>

    <declare-styleable name="NoDataView">
        <attr name="text" format="string" />
        <attr name="image_src" format="reference" />
        <attr name="text_color" format="color" />
        <attr name="is_show_image" format="boolean"/>
    </declare-styleable>

</resources>