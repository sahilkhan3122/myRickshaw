    </style>

    <style name="CircularProgressIndicatorStyle" parent="Widget.Material3.CircularProgressIndicator.Legacy">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">3dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/yellow</item>
        <item name="trackColor">@color/black</item>
        <item name="trackColorActive">@color/black</item>
        <item name="trackColorInactive">@color/black</item>
    </style>

    <style name="YellowRegular24" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/margin_padding_14dp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_md</item>
    </style>

    <style name="GrayRegular14" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_md</item>
    </style>
    <style name="GrayMediumOpacity60Gray12" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayOpacity60</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_md</item>
    </style>

    <style name="BlackBold24" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/margin_padding_24dp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
    </style>

    <style name="BlackBold18" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
    </style>

    <style name="BlackBold16" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
    </style>

    <style name="BlackDemi16" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_demi</item>
    </style>

    <style name="BlackMd14" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_md</item>
    </style>

    <style name="CornerCut.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomShapeableImageView" >
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <!-- Custom ShapeAppearance -->
    <style name="CustomShapeAppearance" parent="">
        <item name="android:maxWidth">66dp</item>
        <item name="android:height">66dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>

    <style name="SnakeBarStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="CommonEditTextOtp">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:width">42dp</item>
        <item name="android:height">50dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/primary_edit_text_otp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item> <!--For use full with than use false-->
    </style>

    <style name="DialogTitleTextStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yellow</item>
    </style>


</resources>