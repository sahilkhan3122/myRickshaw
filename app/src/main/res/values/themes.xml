        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Myrickshawschoolparentapp" parent="Base.Theme.Myrickshawschoolparentapp" />

    <style name="ButtonStyleCustom" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
    </style>

    <style name="ButtonStyleCustom14" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
    </style>

    <style name="ButtonStyleCustom14demi" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_demi</item>
    </style>


    <style name="ButtonStyleCustom10" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/dimens10sp</item>
        <item name="fontFamily">@font/itc_avant_garade_std_bold</item>
